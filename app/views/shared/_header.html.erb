<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    margin: 0;
    padding: 0;
    background: #fafafa;
  }
  .header {
    border-bottom: 1px solid #ddd;
    padding: 15px 0;
    background: white;
  }
  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
  }
  .header h1 {
    margin: 0;
    font-size: 18px;
    font-weight: bold;
  }
  .header h1 a {
    text-decoration: none;
    color: inherit;
  }
  .user-info {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  .logout-btn {
    padding: 8px 16px;
    border: 1px solid #ccc;
    background: #f5f5f5;
    cursor: pointer;
    font-size: 14px;
    text-decoration: none;
    color: black;
  }
  .logout-btn:hover {
    background: #e8e8e8;
  }
</style>

<header class="header">
  <div class="header-content">
    <h1><%= link_to "勤怠管理システム", root_path %></h1>
    <div class="user-info">
      <span style="font-size: 14px;"><%= current_user.display_name %></span>
      <%= link_to "ログアウト", destroy_user_session_path, class: "logout-btn" %>
    </div>
  </div>
</header>
