  }
  .btn-action {
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    margin-right: 8px;
  }
  .btn-edit {
    background: #f5f5f5;
    color: #333;
    border: 1px solid #ddd;
  }
  .btn-edit:hover {
    background: #e0e0e0;
  }
  .btn-cancel {
    background: #fff;
    color: #d32f2f;
    border: 1px solid #d32f2f;
  }
  .btn-cancel:hover {
