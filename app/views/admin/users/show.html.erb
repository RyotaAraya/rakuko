<% content_for :title, "ユーザー詳細" %>

<%= render 'shared/header' %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <div class="flex items-center space-x-4 mb-4">
        <%= link_to admin_users_path, class: "text-blue-600 hover:text-blue-900" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold text-gray-900">
          <%= @user.display_name %>さんの詳細
        </h1>
      </div>

      <!-- ステータスバッジ -->
      <div class="flex items-center space-x-2">
        <% case @user.status %>
        <% when 'pending' %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            承認待ち
          </span>
        <% when 'active' %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            有効
          </span>
        <% when 'rejected' %>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            拒否
          </span>
        <% end %>
      </div>
    </div>

    <!-- 承認待ちの場合、承認フォームを表示 -->
    <% if @user.pending? %>
      <div class="bg-white shadow sm:rounded-lg mb-6">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">承認・拒否アクション</h3>

          <%= form_with model: [:admin, @user], url: approve_admin_user_path(@user), method: :patch, class: "space-y-6" do |form| %>
            <!-- 部署選択 -->
            <div>
              <%= form.label :department_id, "部署", class: "block text-sm font-medium text-gray-700" %>
              <%= form.select :department_id,
                              options_from_collection_for_select(@departments, :id, :name, @user.department_id),
                              { prompt: "部署を選択してください" },
                              required: true,
                              class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              <p class="mt-1 text-xs text-red-500">※必須項目：承認時にユーザーが所属する部署を選択してください</p>
            </div>

            <!-- 権限選択 -->
            <div>
              <fieldset>
                <legend class="block text-sm font-medium text-gray-700 mb-2">権限（1つ選択）</legend>
                <div class="space-y-3">
                  <% @roles.each do |role| %>
                    <div class="relative flex items-start">
                      <div class="flex items-center h-5">
                        <%= radio_button_tag "user[role_id]",
                                             role.id,
                                             role.name == 'student',
                                             id: "approve_role_#{role.id}",
                                             class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300" %>
                      </div>
                      <div class="ml-3 text-sm">
                        <%= label_tag "approve_role_#{role.id}", class: "font-medium text-gray-900" do %>
                          <%= role.display_name %>
                          <span class="text-gray-500 font-normal block mt-1 text-sm">
                            <%= role_description(role.name) %>
                          </span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </fieldset>
              <p class="mt-2 text-xs text-gray-500">デフォルトで「アルバイト」権限が選択されています</p>
            </div>

            <!-- 契約終了日（アルバイトのみ） -->
            <div id="approve-contract-section" style="display: none;">
              <%= form.label :contract_end_date, "契約終了日", class: "block text-sm font-medium text-gray-700" %>
              <%= form.date_field :contract_end_date,
                                  value: (@user.created_at.to_date + 6.months).to_s,
                                  class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              <p class="mt-1 text-xs text-gray-500">
                契約開始日: <%= @user.created_at.strftime('%Y年%m月%d日') %><br>
                デフォルトで6ヶ月後が設定されています
              </p>
            </div>

            <!-- アクションボタン -->
            <div class="flex space-x-3">
              <%= button_tag type: "submit", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                承認
              <% end %>

              <%= button_to reject_admin_user_path(@user),
                            method: :patch,
                            data: { turbo_confirm: "#{@user.display_name}さんの申請を拒否しますか？" },
                            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
                拒否
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <script>
        function initApproveContractSection() {
          const roleRadios = document.querySelectorAll('input[name="user[role_id]"]');
          const contractSection = document.getElementById('approve-contract-section');
          const studentRoleId = <%= @roles.find { |r| r.name == 'student' }&.id || 'null' %>;

          if (!contractSection) return;

          function toggleContractSection() {
            const selectedRole = document.querySelector('input[name="user[role_id]"]:checked');
            if (selectedRole && parseInt(selectedRole.value) === studentRoleId) {
              contractSection.style.display = 'block';
            } else {
              contractSection.style.display = 'none';
            }
          }

          roleRadios.forEach(radio => {
            radio.addEventListener('change', toggleContractSection);
          });

          toggleContractSection();
        }

        document.addEventListener('DOMContentLoaded', initApproveContractSection);
        document.addEventListener('turbo:load', initApproveContractSection);
      </script>
    <% else %>
      <!-- 有効ユーザーの場合、編集リンクを表示 -->
      <div class="mb-6">
        <%= link_to edit_admin_user_path(@user), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          編集
        <% end %>
      </div>
    <% end %>

    <!-- 基本情報 -->
    <div class="bg-white shadow sm:rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">基本情報</h3>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">氏名</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user.display_name %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">メールアドレス</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @user.email %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">所属部署</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @user.department&.name || '未設定' %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">権限</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @user.roles.any? %>
                <div class="flex flex-wrap gap-2">
                  <% @user.roles.each do |role| %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= role.display_name %>
                    </span>
                  <% end %>
                </div>
              <% else %>
                未設定
              <% end %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- 契約情報（アルバイトのみ） -->
    <% if @user.student? %>
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium leading-6 text-gray-900 mb-4">契約情報</h3>
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">契約開始日</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @user.created_at.strftime('%Y年%m月%d日') %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">契約終了日</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @user.contract_end_date.present? ? @user.contract_end_date.strftime('%Y年%m月%d日') : '未設定' %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">登録日時</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @user.created_at.strftime('%Y年%m月%d日 %H:%M') %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">最終更新</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @user.updated_at.strftime('%Y年%m月%d日 %H:%M') %></dd>
            </div>
          </dl>
        </div>
      </div>
    <% end %>
  </div>
</div>
